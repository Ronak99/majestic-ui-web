generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  uid        String     @unique
  name       String?
  email      String     @unique
  username   String     @unique
  avatar     String?
  created_at DateTime   @default(now())
  registry   registry[]
}

model registry {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  label      String   @unique
  type       String
  authorId   String
  author     users    @relation(fields: [authorId], references: [uid])
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  content    content?
}

model content {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  registry     registry @relation(fields: [name], references: [name])
  label        String   @unique
  preview_url  String   @unique
  description  String
  dependencies Json
  demo         String
  files        Json
  created_at   DateTime @default(now())
}
