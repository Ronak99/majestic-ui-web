generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  uid        String     @unique
  name       String?
  email      String     @unique
  username   String     @unique
  avatar     String?
  created_at DateTime   @default(now())
  registry   registry[]
}

enum RegistryItemType {
  FLOW
  PAGE
  WIDGET
  ARCHITECTURE
}

model registry {
  id         Int              @id @default(autoincrement())
  name       String           @unique
  label      String           @unique
  type       RegistryItemType
  authorId   String
  author     users            @relation(fields: [authorId], references: [uid])
  created_at DateTime         @default(now())
  updated_at DateTime         @default(now())
}
